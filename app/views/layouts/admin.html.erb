<!DOCTYPE html>
<html>
  <head>
    <title>ヒトリのみ 管理者</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'admin', media: 'all' %>
  </head>

  <body class="admin-layout">
    <!-- ヘッダー：左ロゴ / 右メニュー（エンドユーザー版と同じFlex設計） -->
    <header class="admin-header" style="z-index:999; position:sticky; top:0; display:flex; align-items:center; justify-content:space-between;">
      <!-- 左：ロゴ -->
      <div class="admin-left">
      <%= link_to admin_root_path do %>
        <%= image_tag 'logowhite.png', alt: 'ヒトリのみ', class: 'admin-logo' %>
      <% end %>
      </div>

      <!-- 右：ナビゲーション（文字は白で統一） -->
      <nav class="admin-right">
        <%= link_to "ユーザー",       admin_users_path %>
        <%= link_to "店舗",           admin_stores_path %>
        <%= link_to "コメント",       admin_comments_path %>
        <%= link_to "店舗申請",       admin_posts_path %>
        <%= link_to "お問い合わせ",   admin_contacts_path %>
        <%= link_to "管理者", admin_users_path %>
        <%= link_to "ログアウト",     admin_logout_path, method: :delete %>
      </nav>
    </header>

    <main class="admin-main">
      <%= yield %>
    </main>
  </body>
</html>








