<div class="login-container">
  <h1>ログイン</h1>

  <%= form_with url: login_path, method: :post, local: true, class: "login-form" do |f| %>
    <%= f.email_field :email, placeholder: "メールアドレス", required: true %>
    <%= f.password_field :password, placeholder: "パスワード", required: true %>
    <%= link_to "パスワードをお忘れですか？", "#", style: "font-size: 0.9rem;" %>
    <%= f.submit "ログイン", class: "login-button" %>
  <% end %>

  <%= link_to "新規会員登録", new_user_path, class: "signup-link" %>

  <%= image_tag "welcome.png", alt: "Welcome", class: "welcome-image" %>
</div>
